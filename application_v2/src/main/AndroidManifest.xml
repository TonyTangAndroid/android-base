<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.tony_tang.android.demo">


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.tony_tang.android.demo.common.DemoApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppThemeNoTitleBar"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name="com.tony_tang.android.demo.feature.note_list.NoteListActivity"
            android:label="@string/note_list">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="com.tony_tang.android.demo.feature.note_list.fragment.NoteListFragmentActivity"
            android:label="@string/note_list">

        </activity>
        <activity
            android:name="com.tony_tang.android.demo.feature.note_detail.NoteDetailActivity"
            android:label="@string/note_detail"/>
        <activity
            android:name="com.tony_tang.android.demo.feature.note_creation.NoteCreateActivity"
            android:label="@string/note_create"/>
        <activity
            android:name=".feature.note_list.NoteListPagingActivity"
            android:label="@string/note_list_paging"/>
    </application>

</manifest>